<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="vertical">

    <ImageView
        android:id="@+id/route_congestion_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_avoid_congestion"/>

    <View
        android:layout_width="28dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/route_cost_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_avoid_cost"/>

    <View
        android:layout_width="28dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/route_avoidhightspeed_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_avoid_high_speed_road"/>

    <View
        android:layout_width="28dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/route_hightspeed_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_high_speed_load"/>

    <View
        android:layout_width="28dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/route_single_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_single_line"/>

    <View
        android:layout_width="28dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#f4f4f4"/>

    <ImageView
        android:id="@+id/route_multiple_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_multe_line"/>
</merge>