<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_poi"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/poi_img_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_defalut_poi"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:minWidth="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poi_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/poi_intro_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/default_gray_text_color"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/poi_route_btn"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_btn_blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/icon_arrow_top"
                    android:drawablePadding="2dp"
                    android:text="线路"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/poi_navi_btn"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_btn_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/icon_small_location"
                    android:drawablePadding="2dp"
                    android:text="导航"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>