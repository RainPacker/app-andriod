<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/wgt_title_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/wgt_title_back_v"
        android:layout_width="@dimen/title_bar_width"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_title_btn_bg"
        android:contentDescription="@null"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:textColor="@color/title_text"
        android:textSize="@dimen/default_text_size"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/wgt_title_back_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/wgt_title_back_v"
        android:background="@drawable/bg_dot"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/wgt_title_right_v"
        android:layout_width="@dimen/title_bar_width"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_title_btn_bg"
        android:gravity="center"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:textColor="@color/title_text"
        android:textSize="@dimen/default_text_size"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/wgt_title_right_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/wgt_title_right_v"
        android:background="@drawable/bg_dot"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/wgt_title_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/wgt_title_right_v"
        android:layout_toRightOf="@id/wgt_title_back_v"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:textColor="@color/title_text"
        android:textSize="@dimen/title_size"/>
</merge>