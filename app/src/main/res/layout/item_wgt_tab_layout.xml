<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

    <ImageView
        android:id="@+id/item_tab_icon_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/item_tab_txt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tab_icon_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxEms="4"
        android:singleLine="true"
        android:textColor="@color/tab_txt_color"
        android:textSize="@dimen/small_text_size"/>

    <TextView
        android:id="@+id/item_tab_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:includeFontPadding="false"
        android:layout_marginLeft="-2dp"
        android:layout_toRightOf="@id/item_tab_icon_view"
        android:background="@drawable/bg_dot"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone"/>
</RelativeLayout>